{
  "version": 2,
  "name": "letters-by-abbey",
  "build": {
    "command": "cd apps/web && npm run build",
    "outputDirectory": "apps/web/build",
    "installCommand": "cd apps/web && npm install"
  },
  "functions": {
    "runtime": "nodejs20.x"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}